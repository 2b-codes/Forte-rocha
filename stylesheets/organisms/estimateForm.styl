.estimate-form
  text-align center
  color $black
  position relative

  >h3
    font-size: 2em

  >.estimate-form-container
    display block
    h3
      font-size: 1.2em

    >fieldset 
      display inline-block
      max-width 300px
      vertical-align middle
      padding 0
      border none
      // @media screen and (max-width: 500px)
      //   display block
      //   text-align center
      //   max-width 100%
    >.actions
      text-align center
      margin 20px 0
      .btn
        background-color #72bb53
    >.information-box
      text-align center
      padding-left 5px
      border 1px solid #9e9e9e
      margin 20px
      table
        width auto
      .estimate-table
        display inline-block
        .quant 
          width 30px
          text-align left
          border-left 1px solid $black
        .name
          text-align: right
        .quant 
        .name
          &.-title
            font-weight 700
            text-transform uppercase

