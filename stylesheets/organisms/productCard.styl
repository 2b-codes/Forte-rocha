.product-card
  max-width 300px
  display inline-block
  vertical-align middle
  .description
    height 37px
    overflow hidden
    text-align justify
    &.-no-hidden
      height 200px
      overflow-y auto

  .card-reveal
    .btn
      background-color $new-green

  p.read-more
    color blue
    text-decoration underline
    width 100%
    text-align center
    margin 5px 0