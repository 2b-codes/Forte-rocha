.company-values
  .company-values-large
    border 1px solid $border
    margin 20px
    padding 20px
    @media screen and (max-width: 500px)
      display none
    
    .actions-buttons
      text-align: center
      .btn
        margin 0 20px
        background-color #FFF
        color $border
        border 1px solid rgba($border, .7)
        border-radius 2px
    .content-container
      height 150px
      display:table
      position relative
      width 100%
      .content
        width 100%
        position absolute
        display table-cell
        text-align center
        vertical-align middle
        top 30%
  .company-values-small
    padding 20px
    text-align center
    @media screen and (min-width: 501px)
      display none
    
      .content
        width 100%
        margin 20px 0